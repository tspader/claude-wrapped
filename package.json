{
  "name": "@spader/claude-wrapped",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "claude-wrapped": "./src/dialogue-demo.ts"
  },
  "files": [
    "src/**/*"
  ],
  "scripts": {
    "build:wasm": "clang --target=wasm32 -O3 -msimd128 -nostdlib -Wl,--no-entry -Wl,--export-all -o src/wasm/renderer.wasm src/wasm/renderer.c",
    "dev": "bun run build:wasm && bun src/main.ts --scene tpose -a",
    "dialogue": "bun run build:wasm && bun src/dialogue-demo.ts -a",
    "bench": "bun run build:wasm && bun src/main.ts --bench -w 256 -h 64",
    "smoke": "bun run build:wasm && bun src/main.ts -t 0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.60",
    "simplex-noise": "^4.0.3"
  }
}
